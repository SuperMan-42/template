            android:textColor="@color/vp_black"
            android:textSize="30sp" />

        <Button
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#d7d7d7"
            android:text=""
            android:textSize="30sp" />

        <Button
            android:id="@+id/vp_keyboard_3"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/vp_key_btn"
            android:text="3"
            android:textColor="@color/vp_black"
            android:textSize="30sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d7d7d7" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/vp_keyboard_4"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/vp_key_btn"
            android:text="4"
            android:textColor="@color/vp_black"
            android:textSize="30sp" />

        <Button
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#d7d7d7"
            android:text=""
            android:textSize="30sp" />

        <Button
            android:id="@+id/vp_keyboard_5"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/vp_key_btn"
            android:text="5"
            android:textColor="@color/vp_black"
            android:textSize="30sp" />

        <Button
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#d7d7d7"
            android:text=""
            android:textSize="30sp" />

        <Button
            android:id="@+id/vp_keyboard_6"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/vp_key_btn"
            android:text="6"
            android:textColor="@color/vp_black"
            android:textSize="30sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d7d7d7" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/vp_keyboard_7"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/vp_key_btn"
