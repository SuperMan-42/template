    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d7d7d7" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/vp_keyboard_x"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/vp_key_btn_normal"
            android:textColor="@color/vp_black"
            android:text=""
            android:textSize="20sp" />

        <Button
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#d7d7d7"
            android:text=""
            android:textSize="30sp" />

        <Button
            android:id="@+id/vp_keyboard_0"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/vp_key_btn"
            android:text="0"
            android:textColor="@color/vp_black"
            android:textSize="30sp" />

        <Button
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#d7d7d7"
            android:text=""
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/vp_keyboard_d"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/vp_key_btn_bottom"
            android:src="@drawable/vp_keyclose" />
    </LinearLayout>

</LinearLayout>