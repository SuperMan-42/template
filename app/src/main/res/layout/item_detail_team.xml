<?xml version="1.0" encoding="utf-8"?>
<com.core.widget.autolayout.AutoConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="45px">

    <ImageView
        android:id="@+id/im_avator"
        android:layout_width="210px"
        android:layout_height="210px"
        android:layout_marginTop="45px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/bga_round" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36px"
        android:textColor="#333333"
        android:textSize="42px"
        app:layout_constraintLeft_toRightOf="@id/im_avator"
        app:layout_constraintTop_toTopOf="@id/im_avator"
        tools:text="Jack" />

    <TextView
        android:id="@+id/tv_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12px"
        android:textColor="#D9D9D9"
        android:textSize="36px"
        app:layout_constraintLeft_toRightOf="@id/tv_name"
        app:layout_constraintTop_toTopOf="@id/tv_name"
        tools:text="CTO" />

    <TextView
        android:id="@+id/tv_intro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12px"
        android:textColor="#333333"
        android:textSize="39px"
        app:layout_constraintLeft_toLeftOf="@id/tv_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        tools:text="毕业于美国德堡大学历史专业。曾就职于摩根大通和皇家苏格兰银行的投资银行部金融机构组，曾为数十家中国金融机构提供企业估值" />
</com.core.widget.autolayout.AutoConstraintLayout>