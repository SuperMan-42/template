<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F2F5"
    android:orientation="vertical">

    <include layout="@layout/view_toolbar" />

    <com.core.widget.autolayout.AutoScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_1"
                android:layout_width="match_parent"
                android:layout_height="180px"
                android:background="@color/white"
                android:paddingLeft="45px"
                android:paddingRight="45px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="头像"
                    android:textColor="#333333"
                    android:textSize="45px" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="135px"
                    android:layout_height="125px"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="39px"
                    android:layout_toLeftOf="@id/im_right"
                    android:src="@drawable/bga_textview_blue" />

                <ImageView
                    android:id="@+id/im_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/im_login_phone" />

            </RelativeLayout>

            <View
                style="@style/divider"
                android:layout_marginLeft="45px" />

            <RelativeLayout
                android:id="@+id/rl_2"
                android:layout_width="match_parent"
                android:layout_height="132px"
                android:background="@color/white"
                android:paddingLeft="45px"
                android:paddingRight="45px">

