<?xml version="1.0" encoding="utf-8"?>
<com.core.widget.autolayout.AutoConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F2F5"
    android:orientation="vertical">

    <include layout="@layout/view_toolbar" />

    <EditText
        android:id="@+id/et_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="72px"
        android:background="@color/white"
        android:imeOptions="actionSend"
        android:inputType="text"
        android:paddingBottom="36px"
        android:paddingLeft="45px"
        android:paddingRight="45px"
        android:paddingTop="36px"
        android:singleLine="true"
        android:textColor="#333333"
        android:textSize="45px"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        tools:text="eddie0730" />

    <LinearLayout
        android:id="@+id/ll_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="450px"
        android:orientation="vertical"
        android:paddingBottom="36px"
        android:paddingLeft="45px"
        android:paddingRight="45px"
        android:paddingTop="36px"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <EditText
            android:id="@+id/et_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="top|left"
            android:imeOptions="actionSend"
            android:inputType="text"
            android:maxLength="20"
            android:textColor="#333333"
            android:textSize="45px"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            tools:text="eddie0730" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="0/20"
            android:textColor="#999999"
            android:textSize="42px" />
    </LinearLayout>
</com.core.widget.autolayout.AutoConstraintLayout>