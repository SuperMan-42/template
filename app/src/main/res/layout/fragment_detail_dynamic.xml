<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="375px"
        android:layout_marginBottom="45px"
        android:layout_marginLeft="36px"
        android:layout_marginRight="36px"
        android:layout_marginTop="60px"
        android:background="@drawable/dynamic_bg"
        android:orientation="horizontal"
        android:paddingLeft="36px"
        android:paddingRight="36px">

        <RelativeLayout
            android:id="@+id/imgs_layout"
            android:layout_width="210px"
            android:layout_height="210px"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/dynamic_iv"
                android:layout_width="210px"
                android:layout_height="210px"
                android:scaleType="centerCrop"
                android:src="@drawable/bga_round" />

            <TextView
                android:id="@+id/img_count_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#30000000"
                android:gravity="center"
                android:paddingBottom="9px"
                android:paddingTop="9px"
                android:textColor="@color/white"
                android:textSize="36px"
                tools:text="1å›¾" />
        </RelativeLayout>

        <TextView
            android:id="@+id/dynamic_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24px"
            android:layout_marginLeft="18px"
            android:layout_marginTop="21px"
            android:ellipsize="end"
            android:lines="5"
            android:text=""
            android:textColor="#333333"
            android:textSize="42px" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="2">

            <View
                android:layout_width="match_parent"
                android:layout_height="9px"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:background="#E9E9E9" />

            <View
                android:id="@+id/last_time_line"
                android:layout_width="match_parent"
                android:layout_height="9px"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:background="#E9E9E9" />
        </LinearLayout>

        <ImageView
            android:id="@+id/next_time_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="-30px"
            android:src="@drawable/time_point"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/current_time_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/time_point" />

        <ImageView
            android:id="@+id/last_time_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="-30px"
            android:src="@drawable/time_point"
            android:visibility="invisible" />
    </RelativeLayout>

    <TextView
        android:id="@+id/current_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="66px"
        android:layout_marginTop="9px"
        android:text=""
        android:textColor="#2C313A" />

</LinearLayout>