<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F2F5"
    android:orientation="vertical"
    tools:context="com.recorder.mvp.ui.activity.AuthActivity">

    <include layout="@layout/view_toolbar" />

    <com.core.widget.autolayout.AutoScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.core.widget.autolayout.AutoConstraintLayout
                android:id="@+id/cl_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45px"
                android:layout_marginRight="45px"
                android:layout_marginTop="70px"
                android:background="@drawable/bga_round_white"
                android:visibility="gone">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/im_head"
                    android:layout_width="252px"
                    android:layout_height="252px"
                    android:layout_marginBottom="75px"
                    android:layout_marginLeft="36px"
                    android:layout_marginTop="75px"
                    android:src="@drawable/auth_zc"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="36px"
                    android:layout_marginTop="60px"
                    android:text="众筹投资人"
                    app:layout_constraintBottom_toTopOf="@+id/tag_left"
                    app:layout_constraintLeft_toRightOf="@id/im_head"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:textColor="#333333"
                    tools:textSize="45px" />

                <ImageView
                    android:id="@+id/tag_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15px"
                    app:layout_constraintLeft_toLeftOf="@id/tv_title"
                    app:layout_constraintTop_toBottomOf="@id/tv_title"
                    tools:src="@drawable/auth_zc_0" />

                <ImageView
                    android:id="@+id/tag_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15px"
                    app:layout_constraintLeft_toRightOf="@id/tag_left"
                    app:layout_constraintTop_toTopOf="@id/tag_left"
                    tools:src="@drawable/auth_right_0" />

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="60px"
                    android:layout_marginRight="45px"
                    android:layout_marginTop="15px"
                    android:text="金融资产不低于300万元或者最近三年个人年均收入不低于50万元的众筹投资人"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="@id/tag_left"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tag_right"
                    tools:textColor="#666666"
                    tools:textSize="42px" />

                <ImageView
                    android:id="@+id/im_auth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30px"
                    android:src="@drawable/auth_cn_status_1"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </com.core.widget.autolayout.AutoConstraintLayout>

            <com.core.widget.autolayout.AutoConstraintLayout
                android:id="@+id/cl_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45px"
                android:layout_marginRight="45px"
                android:layout_marginTop="36px"
                android:background="@drawable/bga_round_white">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/im_head2"
                    android:layout_width="252px"
                    android:layout_height="252px"
                    android:layout_marginBottom="75px"
                    android:layout_marginLeft="36px"
                    android:layout_marginTop="75px"
                    android:src="@drawable/auth_conformity"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="36px"
                    android:layout_marginTop="60px"
                    android:text="合格投资人"
                    app:layout_constraintBottom_toTopOf="@+id/tag_left2"
                    app:layout_constraintLeft_toRightOf="@id/im_head2"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:textColor="#333333"
                    tools:textSize="45px" />

                <ImageView
                    android:id="@+id/tag_left2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15px"
                    app:layout_constraintLeft_toLeftOf="@id/tv_title2"
                    app:layout_constraintTop_toBottomOf="@id/tv_title2"
                    tools:src="@drawable/auth_conformity_0" />

                <ImageView
                    android:id="@+id/tag_right2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15px"
                    app:layout_constraintLeft_toRightOf="@id/tag_left2"
                    app:layout_constraintTop_toTopOf="@id/tag_left2"
                    tools:src="@drawable/auth_right_0" />

                <TextView
                    android:id="@+id/tv_content2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="60px"
                    android:layout_marginRight="45px"
                    android:layout_marginTop="15px"
                    android:text="金融资产不低于300万元或者最近三年个人年均收入不低于50万元的私募投资人"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="@id/tag_left2"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tag_right2"
                    tools:textColor="#666666"
                    tools:textSize="42px" />

                <ImageView
                    android:id="@+id/im_auth2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30px"
                    android:src="@drawable/auth_cn_status_1"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </com.core.widget.autolayout.AutoConstraintLayout>

            <com.core.widget.autolayout.AutoConstraintLayout
                android:id="@+id/cl_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45px"
                android:layout_marginRight="45px"
                android:layout_marginTop="36px"
                android:background="@drawable/bga_round_white">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/im_head3"
                    android:layout_width="252px"
                    android:layout_height="252px"
                    android:layout_marginBottom="75px"
                    android:layout_marginLeft="36px"
                    android:layout_marginTop="75px"
                    android:src="@drawable/auth_organ"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_title3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="36px"
                    android:layout_marginTop="60px"
                    android:text="机构投资人"
                    app:layout_constraintBottom_toTopOf="@+id/tag_left3"
                    app:layout_constraintLeft_toRightOf="@id/im_head3"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:textColor="#333333"
                    tools:textSize="45px" />

                <ImageView
                    android:id="@+id/tag_left3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15px"
                    app:layout_constraintLeft_toLeftOf="@id/tv_title3"
                    app:layout_constraintTop_toBottomOf="@id/tv_title3"
                    tools:src="@drawable/auth_organ_0" />

                <ImageView
                    android:id="@+id/tag_right3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15px"
                    app:layout_constraintLeft_toRightOf="@id/tag_left3"
                    app:layout_constraintTop_toTopOf="@id/tag_left3"
                    tools:src="@drawable/auth_right_0" />

                <TextView
                    android:id="@+id/tv_content3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="60px"
                    android:layout_marginRight="45px"
                    android:layout_marginTop="15px"
                    android:text="净资产不低于1000万元的机构投资人"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="@id/tag_left3"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tag_right3"
                    tools:textColor="#666666"
                    tools:textSize="42px" />

                <ImageView
                    android:id="@+id/im_auth3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30px"
                    android:src="@drawable/auth_cn_status_1"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </com.core.widget.autolayout.AutoConstraintLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45px"
                android:layout_marginTop="36px"
                android:text="提示"
                android:textColor="#535353"
                android:textSize="42px"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_3" />

            <TextView
                android:id="@+id/tv_auth_alert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="132px"
                android:layout_marginLeft="45px"
                android:layout_marginRight="45px"
                android:layout_marginTop="9px"
                android:textColor="#666666"
                android:textSize="39px"
                tools:text="@string/text_auth_alert" />
        </LinearLayout>
    </com.core.widget.autolayout.AutoScrollView>

</LinearLayout>
