<?xml version="1.0" encoding="utf-8"?>
<com.core.widget.autolayout.AutoConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F2F5">

    <include layout="@layout/view_toolbar" />

    <com.core.widget.autolayout.AutoScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="45px"
        android:layout_marginRight="45px"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="33px"
                android:textColor="#333333"
                android:textSize="45px"
                android:textStyle="bold"
                tools:text="股权投资项目一号" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45px"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="36px"
                android:paddingLeft="51px"
                android:paddingRight="51px"
                android:paddingTop="36px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="认购金额"
                    android:textColor="#333333"
                    android:textSize="42px" />

                <com.core.widget.autolayout.AutoConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="48px"
                        android:text="￥"
                        android:textColor="#333333"
                        android:textSize="66px"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/et_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="21px"
                        android:background="@null"
                        android:lines="1"
                        android:maxLength="9"
                        android:maxWidth="720px"
                        android:minWidth="180px"
                        android:textColor="#333333"
                        android:textSize="165px"
                        app:layout_constraintLeft_toRightOf="@id/tv_1"
                        tools:text="36" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="48px"
                        android:layout_marginLeft="30px"
                        android:text="万元"
                        android:textColor="#333333"
                        android:textSize="42px"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/et_1" />
                </com.core.widget.autolayout.AutoConstraintLayout>

                <View style="@style/divider" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24px"
                    android:textColor="#666666"
                    android:textSize="39px"
                    tools:text="起投金额1万元" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18px"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="36px"
                android:paddingLeft="51px"
                android:paddingRight="51px"
                android:paddingTop="36px">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="占股比例: "
                        android:textColor="#878787"
                        android:textSize="42px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18%"
                        android:textColor="#262626"
                        android:textSize="42px"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="占股比例: "
                        android:textColor="#878787"
                        android:textSize="42px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22%"
                        android:textColor="#262626"
                        android:textSize="42px"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="占股比例: "
                        android:textColor="#878787"
                        android:textSize="42px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="33%"
                        android:textColor="#262626"
                        android:textSize="42px"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="66px"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/im_login_phone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21px"
                    android:text="我已知晓初创及成长期的企业有较高危险性，我将承担可能的损失，甚至能是100%的损失。"
                    android:textColor="#666666"
                    android:textSize="39px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36px"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/im_login_phone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21px"
                    android:text="我已知晓初创及成长期的企业有较高危险性，我将承担可能的损失，甚至能是100%的损失。"
                    android:textColor="#666666"
                    android:textSize="39px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36px"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/im_login_phone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21px"
                    android:text="我已知晓初创及成长期的企业有较高危险性，我将承担可能的损失，甚至能是100%的损失。"
                    android:textColor="#666666"
                    android:textSize="39px" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="match_parent"
                android:layout_height="132px"
                android:layout_marginBottom="180px"
                android:layout_marginTop="180px"
                android:background="@drawable/bga_button"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="45px" />
        </LinearLayout>
    </com.core.widget.autolayout.AutoScrollView>

    <include layout="@layout/include_success" />

</com.core.widget.autolayout.AutoConstraintLayout>