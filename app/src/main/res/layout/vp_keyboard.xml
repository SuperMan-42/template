<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/l_num"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/keyboard_head_layout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:background="@drawable/vp_keyboard_head_selector"
        android:clickable="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/keyboard_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/vp_keyboard_head_arow" />
    </LinearLayout>

    <include layout="@layout/vp_number_keyboard" />

</LinearLayout>