<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="30px"
        android:background="#F0F2F5" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/item_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/project_img"
                android:layout_width="330px"
                android:layout_height="270px"
                android:layout_marginBottom="75px"
                android:layout_marginLeft="36px"
                android:layout_marginRight="36px"
                android:layout_marginTop="75px"
                android:scaleType="centerCrop"
                android:src="@drawable/bga_round" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="45px"
                android:layout_marginRight="36px"
                android:layout_marginTop="45px"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/status_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="18px"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="#333333"
                        android:textSize="48px"
                        tools:text="德国品牌母婴耳温计融资" />
                </LinearLayout>

                <TextView
                    android:id="@+id/desc_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24px"
                    android:ellipsize="end"
                    android:textColor="#666666"
                    android:textSize="42px"
                    tools:text="快速测量婴儿体温,同步到app,智能家居生活,从这里开始" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tag_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="39px"
                        android:drawableLeft="@drawable/im_login_phone"
                        android:drawablePadding="15px"
                        android:textColor="#666666"
                        android:textSize="36px"
                        tools:text="智能生活" />

                    <TextView
                        android:id="@+id/round_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/im_login_phone"
                        android:drawablePadding="15px"
                        android:textColor="#666666"
                        android:textSize="36px"
                        tools:text="A轮" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="36px"
            android:layout_marginTop="18px"
            android:textColor="#999999"
            android:textSize="33px"
            tools:text="一天前" />
    </RelativeLayout>

</LinearLayout>