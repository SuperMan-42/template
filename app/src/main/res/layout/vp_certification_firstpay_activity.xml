<?xml version="1.0" encoding="utf-8"?><!--首次支付-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vp_gray_bg"
    android:orientation="vertical">

    <com.ucfpay.plugin.certification.views.UcfTitleView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/scroll_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="@dimen/vp_left_margin"
                android:layout_marginRight="@dimen/vp_right_margin"
                android:layout_marginTop="40dp"
                android:text="@string/vp_card_user_name"
                android:textColor="@color/vp_black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/user_id_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/vp_left_margin"
                android:layout_marginRight="@dimen/vp_right_margin"
                android:layout_marginTop="10dp"
                android:text="@string/vp_id_card_number"
                android:textColor="@color/vp_black"
                android:textSize="15sp"
                android:layout_marginBottom="15dp" />

            <!-- 持卡人布局 -->
            <com.ucfpay.plugin.certification.views.UserNameEditText
                android:id="@+id/user_name_edittext"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/vp_white"
                android:hint="@string/vp_hint_user_name_number"
                android:inputType="text"
                android:maxLength="16"
                android:paddingBottom="5dp"
                android:paddingLeft="25dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/vp_black"
                android:textSize="15sp"
                android:textColorHint="@color/vp_hint_gray"
                android:visibility="gone" />

            <TextView
                android:id="@+id/dividing_line"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="#D7D7D7"
                android:layout_marginLeft="60dp"
                android:visibility="gone" />

            <!-- 身份证布局 -->
            <com.ucfpay.plugin.certification.views.IDCardEditText
                android:id="@+id/id_card_no_edittext"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/vp_white"
                android:hint="@string/vp_hint_id_card_number"
                android:maxLength="18"
                android:paddingLeft="20dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="0dp"
                android:textColor="@color/vp_black"
                android:textSize="15sp"
                android:textColorHint="@color/vp_hint_gray"
                android:inputType="number"
                android:digits="0123456789xX"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="#D7D7D7"
                android:layout_marginLeft="60dp" />

            <!-- 已绑卡布局 -->
            <LinearLayout
                android:id="@+id/has_card_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/vp_textview_selector"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/has_card_tv_bank_icon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="22dp"
                        android:background="@drawable/vp_icbc"
                        android:gravity="center_vertical" />

                    <TextView
                        android:id="@+id/has_card_tv_bank_name"
                        android:layout_width="wrap_content"
                        android:layout_height="52dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text="中国工商银行"
                        android:textColor="@color/vp_black"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:background="#D7D7D7"
                    android:layout_marginLeft="60dp" />

                <TextView
                    android:id="@+id/tv_card_number"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableLeft="@drawable/vp_bank_card_icon"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp"
                    android:text=""
                    android:textColor="@color/vp_black"
                    android:textSize="15sp"
                    android:background="@color/vp_white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:background="#D7D7D7"
                    android:layout_marginLeft="60dp" />

            </LinearLayout>

            <!-- 未绑卡布局,输入银行卡类别和卡号 -->
            <LinearLayout
                android:id="@+id/no_card_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/ly_select_bank"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/vp_textview_selector"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_bank_icon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="22dp"
                        android:background="@drawable/vp_bank_branch_icon"
                        android:gravity="center_vertical" />

                    <TextView
                        android:id="@+id/tv_select_bank"
                        android:layout_width="wrap_content"
                        android:layout_height="52dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="@dimen/vp_right_margin"
                        android:text="请选择银行"
                        android:textColor="@color/vp_hint_gray"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:gravity="center_vertical|right"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/vp_right_arrow"
                            android:gravity="center_vertical" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:background="#D7D7D7"
                    android:layout_marginLeft="60dp" />

                <com.ucfpay.plugin.certification.views.NumberEditText
                    android:id="@+id/card_number_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/vp_white"
                    android:hint="@string/vp_hint_bank_card_number"
                    android:inputType="number"
                    android:maxLength="24"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="18dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/vp_black"
                    android:textSize="15sp"
                    android:textColorHint="@color/vp_hint_gray" />

            </LinearLayout>

            <!-- 手机号布局 -->
            <com.ucfpay.plugin.certification.views.PhoneEditText
                android:id="@+id/phone_number_edittext"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/vp_white"
                android:hint="@string/vp_hint_bank_phone_number"
                android:inputType="number"
                android:maxLength="13"
                android:paddingBottom="5dp"
                android:paddingLeft="25dp"
                android:paddingRight="18dp"
                android:paddingTop="5dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/vp_black"
                android:textSize="15sp"
                android:textColorHint="@color/vp_hint_gray" />

            <!-- 下一步 -->
            <Button
                android:id="@+id/next"
                style="@style/vp_btn_common_style"
                android:layout_marginTop="25dp"
                android:text="@string/vp_btn_next_step" />

            <!-- 底部 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include
                    android:id="@+id/vp_footer"
                    layout="@layout/vp_ucfpay_logo" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>