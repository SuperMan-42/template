<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	
	<!-- btn按下状态 -->
    <item android:state_pressed="true">
    <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <item><shape>
                <gradient android:startColor="#829ec3" android:endColor="#637484" android:angle="90" />

                <corners android:radius="5dip" />

                <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
            </shape></item>
        <!--  
        <item android:drawable="@drawable/up_delete_btn_bg_pressed"></item> -->
    </layer-list>
	</item>
	
    <!-- btn抬起状态 -->
    <item>
    <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <item><shape>
                <gradient android:angle="0" android:endColor="#829ec3" android:startColor="#829ec3" />

                <corners android:radius="5dip" />

                <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
            </shape></item>
        <!--
        <item android:drawable="@drawable/up_delete_btn_bg"></item> -->
    </layer-list>
	</item>
    
</selector>