<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

   <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#829ec3" android:endColor="#637484" android:angle="90"/>
            <corners android:radius="5dip"/>
            <padding android:left="10dp" android:top="10dp" 
                android:right="10dp" android:bottom="10dp" />             
        </shape>
    </item>
    
    <item>
        <shape>
            <gradient android:startColor="#e4e8ec" android:endColor="#e4e8ec" android:angle="0"/>
            <stroke  android:width="1dip" android:color="#e4e8ec"/>
            <corners android:radius="5dip"/>
            <padding android:left="10dp" android:top="10dp" 
                android:right="10dp" android:bottom="10dp" />             
        </shape>
    </item>
    
</selector>