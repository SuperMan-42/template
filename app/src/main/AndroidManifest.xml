<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.recorder">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.MEDIA_CONTENT_CONTROL" />
    <uses-permission android:name="android.permission.READ_SMS" />

    <application
        android:name="com.core.base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".mvp.ui.activity.SplashActivity"
            android:theme="@style/CoreAppTheme.Transparent">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="design_width"
            android:value="1080" />
        <meta-data
            android:name="design_height"
            android:value="1920" />
        <meta-data
            android:name="com.recorder.app.GlobalConfiguration"
            android:value="ConfigModule" />

        <!-- 先锋支付 start -->
        <!-- 插件Activity -->
        <activity
            android:name="com.ucfpay.plugin.certification.activity.LoadingActivity"
            android:theme="@style/vp_dialog_activity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.ucfpay.plugin.certification.activity.CertificationFirstPayActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.ucfpay.plugin.certification.activity.CaptchaActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.ucfpay.plugin.certification.activity.CertificationPayResultActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.ucfpay.plugin.certification.activity.CertificationChooseBankActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.ucfpay.plugin.certification.activity.CertificationAgainPayAndCaptchaActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.ucfpay.plugin.certification.activity.WebAppActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:windowSoftInputMode="stateHidden" />
        <!-- 银联sdk 添加 -->
        <activity android:name="com.unionpay.uppay.PayActivity" />
        <!-- 先锋支付 end -->

        <activity
            android:name=".mvp.ui.activity.HomeActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".mvp.ui.activity.LoginActivity"
            android:launchMode="singleTop"
            android:theme="@style/CoreAppTheme.Transparent"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".mvp.ui.activity.ForgetPasswordActivity"
            android:launchMode="singleTop"
            android:theme="@style/CoreAppTheme.Transparent"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".mvp.ui.activity.NewPasswordActivity"
            android:launchMode="singleTop"
            android:theme="@style/CoreAppTheme.Transparent"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".mvp.ui.activity.RegisterActivity"
            android:launchMode="singleTop"
            android:theme="@style/CoreAppTheme.Transparent"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".mvp.ui.activity.AuthActivity"
            android:theme="@style/CoreAppTheme.Transparent" />
        <activity
            android:name=".mvp.ui.activity.AuthInfoActivity"
            android:theme="@style/CoreAppTheme.Transparent" />
        <activity
            android:name=".mvp.ui.activity.EquityDetailsActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/CoreAppTheme.Transparent" />
        <activity
            android:name=".mvp.ui.activity.BuyActivity"
            android:theme="@style/CoreAppTheme.Transparent" />
        <activity
            android:name=".mvp.ui.activity.MyInvestmentActivity"
            android:theme="@style/CoreAppTheme.Transparent" />
        <activity
            android:name=".mvp.ui.activity.MyAttentionActivity"
            android:theme="@style/CoreAppTheme.Transparent" />
        <activity
            android:name=".mvp.ui.activity.BackStageManagerActivity"
            android:theme="@style/CoreAppTheme.Transparent" />
        <activity
            android:name=".mvp.ui.activity.PersonActivity"
            android:theme="@style/CoreAppTheme.Transparent" />
        <activity
            android:name=".mvp.ui.activity.ModifyPasswordActivity"
            android:theme="@style/CoreAppTheme.Transparent" />
        <activity
            android:name=".mvp.ui.activity.SettingActivity"
            android:theme="@style/CoreAppTheme.Transparent" />
        <activity
            android:name=".mvp.ui.activity.UserModifyActivity"
            android:theme="@style/CoreAppTheme.Transparent"
            android:windowSoftInputMode="stateVisible" />
        <activity
            android:name=".mvp.ui.activity.WebActivity"
            android:theme="@style/CoreAppTheme.Transparent" />
        <activity
            android:name=".mvp.ui.activity.SearchActivity"
            android:theme="@style/CoreAppTheme.Transparent" />
        <activity
            android:name=".mvp.ui.activity.PdfActivity"
            android:theme="@style/CoreAppTheme.Transparent" />
        <activity
            android:name=".mvp.ui.activity.PhotoPreviewActivity"
            android:theme="@style/CoreAppTheme.Transparent" />
        <activity
            android:name=".mvp.ui.activity.VideoActivity"
            android:theme="@style/CoreAppTheme.Transparent" />
        <activity
            android:name=".mvp.ui.activity.DealRecommendActivity"
            android:theme="@style/CoreAppTheme.Transparent"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".mvp.ui.activity.ServiceCenterActivity"
            android:theme="@style/CoreAppTheme.Transparent" />
        <activity
            android:name=".mvp.ui.activity.CashierActivity"
            android:theme="@style/CoreAppTheme.Transparent" />
    </application>

</manifest>