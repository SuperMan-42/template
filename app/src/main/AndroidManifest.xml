<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.recorder">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name="com.core.base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".mvp.ui.activity.HomeActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="design_width"
            android:value="1080" />
        <meta-data
            android:name="design_height"
            android:value="1920" />
        <meta-data
            android:name="com.recorder.app.GlobalConfiguration"
            android:value="ConfigModule" />

        <activity
            android:name=".mvp.ui.activity.LoginActivity"
            android:launchMode="singleTop"
            android:theme="@style/CoreAppTheme.Transparent" />
        <activity
            android:name=".mvp.ui.activity.ForgetPasswordActivity"
            android:launchMode="singleTop"
            android:theme="@style/CoreAppTheme.Transparent" />
        <activity
            android:name=".mvp.ui.activity.NewPasswordActivity"
            android:launchMode="singleTop"
            android:theme="@style/CoreAppTheme.Transparent" />
        <activity
            android:name=".mvp.ui.activity.RegisterActivity"
            android:launchMode="singleTop"
            android:theme="@style/CoreAppTheme.Transparent" />
        <activity
            android:name=".mvp.ui.activity.AuthActivity"
            android:theme="@style/CoreAppTheme.Transparent" />
        <activity
            android:name=".mvp.ui.activity.AuthInfoActivity"
            android:theme="@style/CoreAppTheme.Transparent" />
        <activity
            android:name=".mvp.ui.activity.EquityDetailsActivity"
            android:theme="@style/CoreAppTheme.Transparent" />
        <activity
            android:name=".mvp.ui.activity.BuyActivity"
            android:theme="@style/CoreAppTheme.Transparent" />
        <activity
            android:name=".mvp.ui.activity.MyInvestmentActivity"
            android:theme="@style/CoreAppTheme.Transparent" />
        <activity
            android:name=".mvp.ui.activity.MyAttentionActivity"
            android:theme="@style/CoreAppTheme.Transparent" />
        <activity
            android:name=".mvp.ui.activity.BackStageManagerActivity"
            android:theme="@style/CoreAppTheme.Transparent" />
        <activity
            android:name=".mvp.ui.activity.PersonActivity"
            android:theme="@style/CoreAppTheme.Transparent" />
        <activity
            android:name=".mvp.ui.activity.ModifyPasswordActivity"
            android:theme="@style/CoreAppTheme.Transparent" />
        <activity
            android:name=".mvp.ui.activity.SettingActivity"
            android:theme="@style/CoreAppTheme.Transparent" />
        <activity
            android:name=".mvp.ui.activity.UserModifyActivity"
            android:theme="@style/CoreAppTheme.Transparent"
            android:windowSoftInputMode="stateVisible" />
        <activity
            android:name=".mvp.ui.activity.WebActivity"
            android:theme="@style/CoreAppTheme.Transparent" />
    </application>

</manifest>